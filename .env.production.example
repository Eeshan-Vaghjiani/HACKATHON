# ============================================================================
# HABITATCANVAS PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env.production and update the values for your deployment

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=production
SECRET_KEY=your-super-secret-key-change-this-in-production
CORS_ORIGINS=https://habitatcanvas.com,https://www.habitatcanvas.com

# ============================================================================
# CONTAINER IMAGE TAGS
# ============================================================================
FRONTEND_TAG=latest
BACKEND_TAG=latest

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_URL=https://api.habitatcanvas.com
WORKERS=4
LOG_LEVEL=INFO

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_DB=habitatcanvas
POSTGRES_USER=habitatcanvas_user
POSTGRES_PASSWORD=your-secure-database-password-change-this

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_PASSWORD=your-secure-redis-password-change-this

# ============================================================================
# SSL/TLS CONFIGURATION
# ============================================================================
ACME_EMAIL=admin@habitatcanvas.com
TRAEFIK_LOG_LEVEL=INFO
TRAEFIK_AUTH=admin:$2y$10$your-hashed-password-for-traefik-dashboard

# ============================================================================
# MONITORING CONFIGURATION
# ============================================================================
GRAFANA_PASSWORD=your-secure-grafana-password-change-this

# ============================================================================
# ERROR TRACKING
# ============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=habitatcanvas-backups
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# Slack notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Email service (for notifications)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=notifications@habitatcanvas.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=HabitatCanvas <notifications@habitatcanvas.com>

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================
# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# Redis connection settings
REDIS_MAX_CONNECTIONS=50
REDIS_RETRY_ON_TIMEOUT=true

# Application performance settings
MAX_UPLOAD_SIZE=100MB
REQUEST_TIMEOUT=300
WORKER_TIMEOUT=300

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Rate limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Session settings
SESSION_TIMEOUT=3600
SECURE_COOKIES=true

# CORS settings
CORS_MAX_AGE=86400
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_ANALYTICS=true
ENABLE_TELEMETRY=true
ENABLE_DEBUG_ENDPOINTS=false
ENABLE_ADMIN_PANEL=true

# ============================================================================
# RESOURCE LIMITS
# ============================================================================
# Memory limits (for container orchestration)
FRONTEND_MEMORY_LIMIT=512M
BACKEND_MEMORY_LIMIT=4G
POSTGRES_MEMORY_LIMIT=2G
REDIS_MEMORY_LIMIT=1G

# CPU limits
FRONTEND_CPU_LIMIT=0.5
BACKEND_CPU_LIMIT=2.0
POSTGRES_CPU_LIMIT=1.0
REDIS_CPU_LIMIT=0.5